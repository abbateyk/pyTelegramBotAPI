import os
import requests

# Inserisci qui il tuo token del bot
TOKEN = "5843879745:AAEPv-z87PAjmf3Pl_iI3UJSZhFMrGVfsdE"

# Inserisci qui l'ID del canale pubblico
CHANNEL_ID = "shiftfreelancer"

def forward_message(message):
  url = "https://api.telegram.org/bot{}/forwardMessage".format(TOKEN)
  data = {
    "chat_id": CHANNEL_ID,
    "from_chat_id": message["chat"]["id"],
    "message_id": message["message_id"]
  }
  requests.post(url, data=data)

